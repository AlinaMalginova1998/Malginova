//   Проверка на палиндром

import java.util.Scanner; // импорт сканнера

public class Palindrom {
    public static void main(String[] vals) {
		Scanner scan = new Scanner(System.in);
		System.out.println("Vvedite slovo: ");
        for (int i = 0; i < 10; i++) {
            String s = scan.nextLine();
            System.out.println(s + ": " + PalindromCheck(s));
        }
    }

    //Разворачивает строку s
    public static String Perevorot(String s) {
        String reverse = "";

        for (int i = s.length()-1; i >= 0; i--) {
            reverse += s.charAt(i);
        }

        return reverse;
    }

    //Проверяет является ли  новая строка s палиндромом
    public static boolean isPalindrome(String s) {
        return s.equals(reverseString(s));
    }
}
